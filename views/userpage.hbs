<!-- Page -->
<div class="page">
    <div class="page-content container-fluid">
        <div class="row">
            <div class="col-lg-12 col-xl-6 order-xl-2">
            {{#if userInfo.local.lastStatus}}
                <div class="card card-block">
                        <div class="modal-header">

                            <blockquote class="blockquote cover-quote card-blockquote">
                                <p>{{userInfo.local.lastStatus}}</p>
                            </blockquote>
                        </div>
                </div>
            {{/if}}
            </div>
            <!-- Left Column -->
            <div class="col-lg-6 col-xl-3 order-xl-1">
                <form method="post" {{#equals friendStatus 'Sub'}} action="/unsub"  {{else}} action="/sub"  {{/equals}}>
                    <input type="hidden" value="{{userInfo._id}}" name="friend_id">
                    <input type="hidden" value="{{userInfo.local.name}}" name="friend_name">
                    <input type="hidden" value="{{userInfo.local.photo}}" name="friend_photo">
                <div class="user-info card card-shadow text-center">
                    <div class="user-base card-block">
                        <a class="avatar img-bordered avatar-100">
                            {{#if userInfo.local.photo}}
                                <img src="/{{ userInfo.local.photo }}" alt="Фото">
                            {{/if}}
                        </a>
                        <h4  id="user_name" class="user-name">{{ userInfo.local.name }}</h4>
                        <p class="user-job">{{ userInfo.local.position }}</p>
                        <p class="user-location">{{ userInfo.local.department }}</p>
                    </div>


                    <div class="example example-buttons">
                        <div class="pl-0 pl-sm-20 mt-15 mt-sm-0 align-self-center">

                            <button type="submit" class="btn btn-outline btn-success btn-md">{{#equals friendStatus 'Sub'}} Отписаться {{else}} Подписаться {{/equals}}</button>

                        </div>
                    </div>

                    <hr>

                    <div class="user-socials list-group list-group-full">
                        <a class="list-group-item justify-content-center" href="javascript:void(0)">
                            <i class="icon wb-envelope" aria-hidden="true"></i> {{ userInfo.local.email }}
                        </a>
                        <a class="list-group-item justify-content-center" href="javascript:void(0)">
                            <i class="icon glyphicon glyphicon-earphone"></i> {{ userInfo.local.phone }}
                        </a>
                    </div>
                </div>
                <!-- End User Info -->
                </form>
                <!-- Friend List -->
                <div class="user-friends card card-shadow">
                    <div class="card-block">
                        <h4 class="card-title mb-20">
                            Подписки:
                            <span>{{friendsCnt}}</span>
                        </h4>
                        <ul class="list-group list-group-full m-0">

                            {{#equals friendsCnt 0}} Пока нет :( {{/equals}}

                            {{#each friendsList}}
                                <li class="list-group-item">
                                    <div class="media row">
                                        <div class="pr-20">
                                             {{#equals  ../user.local.name this.friendName }}
                                             <a class="avatar avatar-online" href="/profile">
                                                 <img class="img-fluid" src="/{{this.friendPhoto}}" alt="...">
                                             </a>
                                                 {{else}}
                                            <a class="avatar avatar-online" href="/userpage/{{this.friendId}}">

                                            <img class="img-fluid" src="/{{this.friendPhoto}}" alt="...">
                                            </a>
                                             {{/equals}}
                                        </div>
                                        <div class="media-body" style="">
                                            <h5 class="mt-0 mb-5 hover">
                                                {{this.friendName}}
                                            </h5>
                                        </div>
                                    </div>
                                </li>
                            {{/each}}

                        </ul>
                    </div>
                </div>
                <!-- End Friends List -->
            </div>

            <!-- End Left Column -->


        </div>

    </div>

</div>



