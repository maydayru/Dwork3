<div class="page">
    <div class="page-header">
        <h1 class="page-title">Редактирование профиля</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/profile">Главная</a></li>
        </ol>
    </div>

    <div class="page-content">
        <div class="panel">
            <div class="panel-body container-fluid">
                <div class="row row-lg">
                    <div class="col-md-12 col-lg-6">
                        <!-- Example Horizontal Form -->
                        <div class="example-wrap">
                            <div class="example">
                                <form method="post" action="/updateinfo" enctype="multipart/form-data" >
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label">Имя: </label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" name="username" value="{{ user.local.name }}" placeholder="{{ user.local.name }}"/>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <legend class="col-md-3 col-form-legend">Пол: </legend>
                                        <div class="col-md-9 gender">
                                            <script type="text/javascript">
                                                $(document).ready(function(){
                                                    $("input[name='gender']").click(function(){
                                                    $("#usergender").val(  $(this).next('label').text() );
                                                     });
                                                  if($("#usergender").val()==='Мужской'){
                                                      $("#male").prop('checked', true);}
                                                      else {
                                                      $("#female").prop('checked', true);
                                                  }
                                                });
                                            </script>
                                            <input id="usergender" name="usergender" type="hidden" value="{{user.local.gender}}" />
                                            <div class="radio-custom radio-default radio-inline">

                                                <input type="radio" id="male" name="gender" />
                                                <label for="male">Мужской</label>
                                            </div>
                                            <div class="radio-custom radio-default radio-inline">

                                                <input type="radio" id="female" name="gender" />
                                                <label for="female">Женский</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label">Изображение: </label>
                                        <div class="col-md-9">
                                            {{#if user.local.photo}}
                                            <input type="file" data-show-remove="false" name="userphoto" id="userphoto" data-plugin="dropify" data-default-file="/{{ user.local.photo }}"/>
                                            {{/if}}
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label">Дата рождения: </label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" id="birthdate" name="userbirthdate" data-plugin="formatter"
                                                   data-pattern="[[99]]/[[99]]/[[9999]]" value="{{user.local.birthdate}}"/>
                                            <p class="text-help">25/12/2017</p>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label">Почта: </label>
                                        <div class="col-md-9">
                                            <input type="email" class="form-control" id="email" name="useremail" value="{{user.local.email}}" placeholder="{{ user.local.email }}"
                                                   autocomplete="off" />
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label">Телефон: </label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" id="phone" name="userphone" value="{{user.local.phone}}" data-plugin="formatter"
                                                   data-pattern="([[999]]) [[999]]-[[9999]]"  />
                                            <p class="text-help">(123) 123-1234</p>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                    <label class="col-md-3 col-form-label">Отдел: </label>
                                    <div class="col-md-9">
                                        <select class="btn btn-outline btn-default dropdown-toggle" id="dep" name="userdep"
                                                data-toggle="dropdown" aria-expanded="false">
                                            {{# each depsList }}
                                                <option value="{{this.depName}}">{{this.depName}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                                    <div class="form-group row">
                                        <label class="col-md-3 col-form-label">Должность: </label>
                                        <div class="col-md-9">

                                            <select class="btn btn-outline btn-default dropdown-toggle" id="poss" name="userpost"
                                                    data-toggle="dropdown" aria-expanded="false">
                                                <div class="dropdown-menu" aria-labelledby="exampleColorDropdown1" role="menu">
                                                {{# each postsList }}
                                                    <option class="dropdown-item" value="{{this.posName}}">{{this.posName}}</option>
                                                {{/each}} </div>
                                            </select>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="form-group row">
                                        <div class="col-md-9">
                                            <button type="submit" class="btn btn-success">Сохранить </button>
                                            <button type="reset" class="btn btn-default">Отмена</button>

                                        </div>
                                    </div>


                                </form>
